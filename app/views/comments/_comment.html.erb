<div class="comment">
  <p class="comment-content"><%= comment.content %></p>
  <p class="comment-time">由 <%= comment.user.username %> 评论于 <%= time_ago_in_words(comment.created_at) %> 之前 </p>

  <% if user_signed_in?  %>
    <% if comment.user_id == current_user.id  %>
      <%= link_to "编辑", edit_post_comment_path(comment.post, comment), class: "btn btn-primary" %>
      <%= link_to "删除", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-primary", data: { confirm: "Are you sure!" } %>
    <% end %>
  <% end %>
</div>