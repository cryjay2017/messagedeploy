<%= form_for @post do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2> 
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :title, "标题:" %><br />
    <%= form.text_field :title, id: :post_title, size: "50" %>
  </div>
  <br />
  <div class="field">
    <%= form.label :content, "内容:" %><br />
    <%= form.text_area :content, id: :post_content, size: "60x12" %>
  </div>
  <br />
  <div class="actions">
    <%= form.submit "创建文章" %>
  </div>
<% end %>