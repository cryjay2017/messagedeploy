<% @posts.each do |post| %>
  <div class="post-wrapper">
    <div class="row">
      <div class="col-md-9 col-md-offset-3">
        <h3 class="title"><%= link_to post.title, post_path(post) %></h3>
        <p class="date"><%= post.created_at.strftime('%Y-%m-%d %H:%M:%S')%></p>
      </div>
    </div> 
  </div>
<% end  %>

